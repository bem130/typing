<Page x:Class="english_typing.TitlePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:english_typing"
      xmlns:properties="clr-namespace:english_typing.Properties"
    mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Background="#FFD5DFDB"
      Title="Title">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="2"/>
        </Grid.RowDefinitions>
        <TextBlock Text="English Typing" FontSize="80" TextAlignment="Center"  VerticalAlignment="Center" FontFamily="Noto Sans Light,Noto Sans JP"/>
        <Button Click="Go_title" FontSize="20" FontFamily="Noto Sans Light,Noto Sans JP" Grid.Row="1" Content="ホーム"/>
        <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="10" Value="{Binding Progress}" Grid.Row="2" Foreground="#FFBFBFBF" Background="White" BorderBrush="White"/>
    </Grid>
</Page>